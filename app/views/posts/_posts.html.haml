%table
  %tr
    %th Name
    %th Title
    %th Content
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.name
      %td= post.title
      %td= post.content
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post), :remote => true
      %td= link_to 'Destroy', post, :remote => true,
            :confirm => 'Are you sure?', :method => :delete
